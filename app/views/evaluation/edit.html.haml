= form_tag evaluation_path(@evaluation), :method => :put do
  %table.table.table-bordered
    %tr
      %th Term
      %th Subject
      %th Course
      %th Section
      %th Instructor
      %th Enrollment
      %th
    %tr
      %td
        = @evaluation.term
      %td
        = @evaluation.subject
      %td
        = @evaluation.course
      %td
        = @evaluation.section
      %td
        = link_to @evaluation.instructor.name, instructor_path(id: @evaluation.instructor.id)
      %td
        = text_field :evaluation,:enrollment
      %td
        = submit_tag 'Update Enrollment Info'
